@model TaskManagementSystem.Models.TaskViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Task</h2>

@*Edit task form*@
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        @Html.Label("Task name")
        @Html.TextBoxFor(model => model.TaskName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Description")
        @Html.TextAreaFor(model => model.TaskDescription, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Required by")
        @Html.TextBoxFor(model => model.RequiredByDate, "{0:MM/dd/yyyy}", new {  @class = "form-control datepicker" })
    </div>
    <div class="form-group">
        @Html.Label("Type")
        @Html.EnumDropDownListFor(model => model.TaskType, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Status")
        @Html.EnumDropDownListFor(model => model.TaskStatus, new { @class = "form-control" })
    </div>
    @Html.ValidationSummary();
    <button type="submit" class="btn btn-primary">Update</button>
    <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Index","Tasks")'">Back</button>
}

